pipeline {
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: maven
            image: maven:alpine
            command:
            - cat
            tty: true
          
         

        '''
    }
  }
  stages {
    stage('Clone') {
      steps {
        container('maven') {
          git branch: 'eks-dev', changelog: false, poll: false, url: 'https://github.com/lcisystems/usda_poc.git'
        }
      }
    }  
    stage('Build-Jar-file') {
      steps {
        container('maven') {
          sh 'mvn package'
        }
      }
    }
    stage('Build-Docker-Image') {
      agent {
    kubernetes {
      yaml '''
      apiVersion: v1
      kind: Pod 
      spec:   
        containers:
        - name: maven
          image: maven:alpine
          command:
           - cat
          tty: true
          env:
           - name: DOCKER_HOST
             value: tcp://localhost:2375
        - name: dind
          image: docker:20-dind
          securityContext:
            privileged: true
          volumeMounts:
            - name: dind-storage
              mountPath: /var/lib/docker
        volumes:
          - name: dind-storage
            emptyDir: {}
         

        '''
    }
  }
      steps {
        container('maven') {
              script{
             sh'''
              docker build -t app .
              '''
}
        }
    }
      }
    }
}
